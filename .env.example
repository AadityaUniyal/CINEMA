# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-change-in-production

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/
DB_NAME=movielens_db

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256

# Redis Configuration (optional)
REDIS_HOST=localhost
REDIS_PORT=6379

# ML Model Storage Configuration
# Leave empty to use default (backend/models/)
# For production, consider using cloud storage or persistent volumes
ML_MODEL_PATH=
ML_LOG_PATH=

# ML Training Scheduler Configuration
ML_TRAINING_SCHEDULE_ENABLED=true
ML_TRAINING_DAY=6          # Day of week (0=Monday, 6=Sunday)
ML_TRAINING_HOUR=2         # Hour (0-23, 2 = 2 AM)
ML_TRAINING_MINUTE=0       # Minute (0-59)

# ML Model Retention
MAX_MODEL_VERSIONS=10      # Keep last N versions per model type
MODEL_RETENTION_DAYS=30    # Delete models older than N days

# Cloud Storage (optional - for production)
USE_CLOUD_STORAGE=false
S3_BUCKET=cinema-ml-models
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# API Configuration
ITEMS_PER_PAGE=20
N_RECOMMENDATIONS=10
MAX_SEARCH_RESULTS=50

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=300

# CORS Configuration (production)
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
