# Auto detect text files and perform LF normalization
* text=auto

# Python
*.py text eol=lf
*.pyw text eol=lf

# JavaScript
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf

# Web
*.html text eol=lf
*.css text eol=lf
*.scss text eol=lf

# Shell scripts
*.sh text eol=lf
*.bat text eol=crlf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Binary files
*.pkl binary
*.h5 binary
*.npy binary
*.joblib binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.mov binary
*.mp4 binary
*.mp3 binary
*.zip binary
*.gz binary
